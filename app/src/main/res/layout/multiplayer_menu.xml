<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/spacebackgroundimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- this is for the initial option, used to
    find another player, or choose to play against computer -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="72dp">

        <RadioButton
            android:id="@+id/findplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="onRadioButtonClicked"
            android:text="FIND A PLAYER"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:typeface="monospace" />


        <RadioButton
            android:id="@+id/computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="PLAY THE COMPUTER"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="italic|bold"
            android:typeface="monospace" />
    </RadioGroup>


    <!-- this is what shows up directly after choosing "play the
      computer -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="306dp">

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/easy"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="invisible"/>


        <RadioButton
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/hard"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="35sp"
            android:textStyle="italic|bold"
            android:typeface="monospace"
            android:visibility="invisible"/>
    </RadioGroup>

    <!-- this is what shows up after you have found an opponent with bluetooth -->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="491dp">

        <RadioButton
            android:id="@+id/cards8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/_8_cards"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="invisible"/>

        <RadioButton
            android:id="@+id/cards16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/_16_cards"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="invisible"/>

        <RadioButton
            android:id="@+id/cards24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="@string/_24_cards"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:typeface="monospace"
            android:visibility="invisible"/>


    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_many_cards"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:typeface="monospace"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="444dp" />




</android.support.constraint.ConstraintLayout>

